{
  "manifest_version": 3,
  "name": "Second Look",
  "version": "1.0",
  "description": "Mindful and ethical shopping assistant",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://api.nessieisreal.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}